{
    "properties": {
        "displayName": "App Service apps should only be accessible over HTTPS",
        "policyType": "Custom",
        "mode": "Indexed",
        "description": "Requires HTTPS connectivity to App Service apps to ensure transport-layer security for communications.",
        "metadata": {
            "version": "1.0.0",
            "category": "App Service"
        },
        "parameters": {
            "effect": {
                "type": "String",
                "metadata": {
                    "displayName": "Effect",
                    "description": "Enable or disable the execution of the policy"
                },
                "allowedValues": [
                    "AuditIfNotExists",
                    "Audit",
                    "Deny",
                    "Disabled"
                ],
                "defaultValue": "Deny"
            }
        },
        "policyRule": {
            "if": {
                "allOf": [
                    {
                        "field": "type",
                        "equals": "Microsoft.Web/sites"
                    },
                    {
                        "field": "kind",
                        "notContains": "functionapp"
                    },
                    {
                        "field": "Microsoft.Web/sites/httpsOnly",
                        "equals": "false"
                    }
                ]
            },
            "then": {
                "effect": "[parameters('effect')]"
            }
        }
    }
}